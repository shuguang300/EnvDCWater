<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/item_upkeephistory_pic"
        android:layout_width="@dimen/ic_adapter_pic"
        android:layout_height="@dimen/ic_adapter_pic"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_pic_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_upkeephistory_pic"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_upkeephistory_name"
            style="@style/ItemLayout"
            android:drawableLeft="@drawable/ic_item_device" />

        <!-- <TextView
            android:id="@+id/item_upkeephistory_actualmanhours"
            style="@style/ItemLayout"
            android:drawableLeft="@drawable/ic_item_hours" /> -->

        <TextView
            android:id="@+id/item_upkeephistory_maintaindetail"
           style="@style/ItemLayout"
            android:drawableLeft="@drawable/ic_item_result" />

        <TextView
            android:id="@+id/item_upkeephistory_ddopinion"
            style="@style/ItemLayout"
            android:drawableLeft="@drawable/ic_item_opinion" />
    </LinearLayout>

</RelativeLayout>