                <TextView
                    android:id="@+id/activity_upkeepapproveitem_approvetime"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_upkeepapproveitem_ddopinion_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_upkeephistoryitem_ddopinion" />

                <TextView
                    android:id="@+id/activity_upkeepapproveitem_ddopinion"
                    style="@style/activity_repairmanageitem_textview"
                    android:drawableRight="@drawable/warning" />
            </TableRow>
            
        </TableLayout>
        
        <Button 
            android:id="@+id/activity_upkeepapproveitem_approve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_upkeephistoryitem_approve"/>
        
    </LinearLayout>

</ScrollView>