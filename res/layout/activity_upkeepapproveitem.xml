            </TableRow>
            
            
            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_upkeepapproveitem_maintainperson_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_upkeephistoryitem_maintainperson" />

                <TextView
                    android:id="@+id/activity_upkeepapproveitem_maintainperson"
