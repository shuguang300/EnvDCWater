<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:id="@+id/main_activity_fragment"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:background="#000000">
    </LinearLayout>
    
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <RadioButton 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:button="@null"
        	android:drawableTop="@drawable/ic_launcher"
            android:text="@string/main_activity_radiogroup_machinemanage"/>
        <RadioButton 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:button="@null"
        	android:drawableTop="@drawable/ic_launcher"
            android:text="@string/main_activity_radiogroup_consmanage"/>
        <RadioButton 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:button="@null"
        	android:drawableTop="@drawable/ic_launcher"
            android:text="@string/main_activity_radiogroup_machineinfo"/>
        <RadioButton 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:button="@null"
        	android:drawableTop="@drawable/ic_launcher"
            android:text="@string/main_activity_radiogroup_planmanage"/>
    </RadioGroup>
</RelativeLayout>
