<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_repair_pmopinion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout style="@style/ItemGroupStyle" >

            <TextView
                style="@style/ItemGroupTitleStyle"
                android:drawableLeft="@drawable/ic_item_groupedit"
                android:text="@string/activity_repairmanageitem_verify" />

            <TextView style="@style/ItemDivider" />

            <TableRow style="@style/ItemLineStyle" >

                <TextView
                    style="@style/ItemTitleStyle"
                    android:drawableLeft="@drawable/ic_item_approve"
                    android:text="@string/activity_repairmanageitem_pmverifyresult" />

                <Switch
                    android:id="@+id/view_repair_pmopinion_pmverify"
                    style="@style/ItemValueSwitchStyle"
                    android:textOff="未通过"
                    android:textOn="通过" />
            </TableRow>

            <TextView style="@style/ItemDivider" />

            <TableRow
                android:id="@+id/view_repair_pmopinion_state_tr"
                style="@style/ItemLineStyle" >

                <TextView
                    style="@style/ItemTitleStyle"
                    android:drawableLeft="@drawable/ic_item_state"
                    android:text="@string/activity_repairmanageitem_backstate" />

                <TextView
                    android:id="@+id/view_repair_pmopinion_state"
                    style="@style/ItemValueStyle"
                    android:drawableRight="@drawable/ic_item_warning" />
            </TableRow>
            
            <TextView style="@style/ItemDivider" />
            
            <TableRow
                android:id="@+id/view_repair_pmopinion_tasktype_tr"
                style="@style/ItemLineStyle" >

                <TextView
                    style="@style/ItemTitleStyle"
                    android:drawableLeft="@drawable/ic_item_state"
                    android:text="@string/activity_repairmanageitem_tasktype" />

                <Switch
                    android:id="@+id/view_repair_pmopinion_tasktype"
                    style="@style/ItemValueSwitchStyle"
                    android:textOff="生产科"
                    android:textOn="设备科" />
            </TableRow>

            <TextView style="@style/ItemDivider" />

            <TableRow
                android:id="@+id/view_repair_pmopinion_opinion_tr"
                style="@style/ItemLineStyle" >

                <TextView
                    style="@style/ItemTitleStyle"
                    android:drawableLeft="@drawable/ic_item_opinion"
                    android:text="@string/activity_repairmanageitem_plantopinion" />

                <TextView
                    android:id="@+id/view_repair_pmopinion_opinion"
                    style="@style/ItemValueStyle"
                    android:drawableRight="@drawable/ic_item_warning" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/view_repair_submit"
            style="@style/RedButtonStyle"
            android:layout_width="match_parent" />
    </LinearLayout>

</ScrollView>