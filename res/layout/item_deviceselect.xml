<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:background="@drawable/inforitem_withnoconner_blue_bg"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_deviceselect_devicename"
        android:textStyle="bold"
        android:gravity="center_vertical|left"/>
    
    <TextView 
        android:layout_below="@id/item_deviceselect_devicename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/middle"
        android:id="@+id/item_deviceselect_devicecons"
        android:gravity="center_vertical|left"/>
    
    <ImageView 
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_machinemanage_arrowright"/>

</RelativeLayout>
