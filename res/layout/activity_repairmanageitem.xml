<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_repairmanageitem_drawlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/activity_repairmanageitem_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
			<include
			    android:id="@+id/activity_repairmanageitem_repairgroupbasic"
                layout="@layout/view_repairbasic" />

			<include
			    android:id="@+id/activity_repairmanageitem_repairgroupfault"
                layout="@layout/view_repairfault" />

            <include
                android:id="@+id/activity_repairmanageitem_repairgrouppeople"
                layout="@layout/view_repairpeople" />

			<include
			    android:id="@+id/activity_repairmanageitem_repairgroupinfo"
                layout="@layout/view_repairinfo" />

            <include
                android:id="@+id/activity_repairmanageitem_repairgroupverify"
                layout="@layout/view_repairverify" />

            <Button
                android:id="@+id/activity_repairmanageitem_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_repairmanageitem_submit" />
        </LinearLayout>
        
    </ScrollView>

    <ListView
        android:id="@+id/activity_repairmanageitem_machinelist"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/white"
        android:choiceMode="singleChoice"
        android:listSelector="@drawable/inforitem_withnoconner_blue_bg" >
    </ListView>

</android.support.v4.widget.DrawerLayout>