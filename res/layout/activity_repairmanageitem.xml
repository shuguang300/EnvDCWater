<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/activity_repairmanageitem_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical" >
		<TextView
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="@string/activity_repairmanageitem_basic"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:background="@drawable/inforitem_withnoconner_blue_bg">
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/activity_repairmanageitem_name"
            	android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/activity_repairmanageitem_name" 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="text"
            	android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/inforitem_withnoconner_blue_bg" >
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/activity_repairmanageitem_type"
            	android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/activity_repairmanageitem_type" 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="text"
            	android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/inforitem_withnoconner_blue_bg" >
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/activity_repairmanageitem_sn"
            	android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/activity_repairmanageitem_sn" 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="text"
            	android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/inforitem_withnoconner_blue_bg" >
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/activity_repairmanageitem_position"
            	android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/activity_repairmanageitem_position" 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="text"
            	android:layout_height="wrap_content"/>
        </TableRow>
        
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/inforitem_withnoconner_blue_bg" >
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/activity_repairmanageitem_starttime"
            	android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/activity_repairmanageitem_starttime" 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="text"
            	android:layout_height="wrap_content"/>
        </TableRow>
        
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/inforitem_withnoconner_blue_bg" >
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/activity_repairmanageitem_manufacturer"
            	android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/activity_repairmanageitem_manufacturer" 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="text"
            	android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>

</LinearLayout>
