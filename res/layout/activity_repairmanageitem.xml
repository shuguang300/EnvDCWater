<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_repairmanageitem_drawlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/activity_repairmanageitem_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout style="@style/activity_repairmanageitem_tablelayout" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_group"
                    android:text="@string/activity_repairmanageitem_basic" />

                <TextView style="@style/item_divide" />

                <TableRow
                    android:id="@+id/activity_repairmanageitem_name_tr"
                    style="@style/activity_repairmanageitem_tablerow" >

                    <TextView
                        style="@style/activity_repairmanageitem_textview_item"
                        android:text="@string/activity_repairmanageitem_name" />

                    <TextView
                        android:id="@+id/activity_repairmanageitem_name"
                        style="@style/activity_repairmanageitem_textview" />
                </TableRow>

                <TextView style="@style/item_divide" />

                <TableRow
                    android:id="@+id/activity_repairmanageitem_type_tr"
                    style="@style/activity_repairmanageitem_tablerow" >

                    <TextView
                        style="@style/activity_repairmanageitem_textview_item"
                        android:text="@string/activity_repairmanageitem_type" />

                    <TextView
                        android:id="@+id/activity_repairmanageitem_type"
                        style="@style/activity_repairmanageitem_textview" />
                </TableRow>

                <TextView style="@style/item_divide" />

                <TableRow
                    android:id="@+id/activity_repairmanageitem_sn_tr"
                    style="@style/activity_repairmanageitem_tablerow" >

                    <TextView
                        style="@style/activity_repairmanageitem_textview_item"
                        android:text="@string/activity_repairmanageitem_sn" />

                    <TextView
                        android:id="@+id/activity_repairmanageitem_sn"
                        style="@style/activity_repairmanageitem_textview" />
                </TableRow>

                <TextView style="@style/item_divide" />

                <TableRow
                    android:id="@+id/activity_repairmanageitem_position_tr"
                    style="@style/activity_repairmanageitem_tablerow" >

                    <TextView
                        style="@style/activity_repairmanageitem_textview_item"
                        android:text="@string/activity_repairmanageitem_position" />

                    <TextView
                        android:id="@+id/activity_repairmanageitem_position"
                        style="@style/activity_repairmanageitem_textview" />
                </TableRow>

                <TextView style="@style/item_divide" />

                <TableRow
                    android:id="@+id/activity_repairmanageitem_starttime_tr"
                    style="@style/activity_repairmanageitem_tablerow" >

                    <TextView
                        style="@style/activity_repairmanageitem_textview_item"
                        android:text="@string/activity_repairmanageitem_starttime" />

                    <TextView
                        android:id="@+id/activity_repairmanageitem_starttime"
                        style="@style/activity_repairmanageitem_textview" />
                </TableRow>

                <TextView style="@style/item_divide" />

                <TableRow
                    android:id="@+id/activity_repairmanageitem_manufacturer_tr"
                    style="@style/activity_repairmanageitem_tablerow" >

                    <TextView
                        style="@style/activity_repairmanageitem_textview_item"
                        android:text="@string/activity_repairmanageitem_manufacturer" />

                    <TextView
                        android:id="@+id/activity_repairmanageitem_manufacturer"
                        style="@style/activity_repairmanageitem_textview" />
                </TableRow>
            </TableLayout>

            <TableLayout style="@style/activity_repairmanageitem_tablelayout" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_group"
                    android:text="@string/activity_repairmanageitem_fault" />

                <TextView style="@style/item_divide" />

                <TableRow
                    android:id="@+id/activity_repairmanageitem_faulttime_tr"
                    style="@style/activity_repairmanageitem_tablerow" >

                    <TextView
                        style="@style/activity_repairmanageitem_textview_item"
                        android:text="@string/activity_repairmanageitem_faulttime" />

                    <TextView
                        android:id="@+id/activity_repairmanageitem_faulttime"
                        style="@style/activity_repairmanageitem_textview" />
                </TableRow>

                <TextView style="@style/item_divide" />

                <TableRow
                    android:id="@+id/activity_repairmanageitem_faultphenomenon_tr"
                    style="@style/activity_repairmanageitem_tablerow" >

                    <TextView
                        style="@style/activity_repairmanageitem_textview_item"
                        android:text="@string/activity_repairmanageitem_faultphenomenon" />

                    <TextView
                        android:id="@+id/activity_repairmanageitem_faultphenomenon"
                        style="@style/activity_repairmanageitem_textview" />
                </TableRow>

                <TextView style="@style/item_divide" />

                <TableRow
                    android:id="@+id/activity_repairmanageitem_handlestep_tr"
                    style="@style/activity_repairmanageitem_tablerow" >

                    <TextView
                        style="@style/activity_repairmanageitem_textview_item"
                        android:text="@string/activity_repairmanageitem_handlestep" />

                    <TextView
                        android:id="@+id/activity_repairmanageitem_handlestep"
                        style="@style/activity_repairmanageitem_textview" />
                </TableRow>

                <TextView style="@style/item_divide" />

                <TableRow
                    android:id="@+id/activity_repairmanageitem_otherstep_tr"
                    style="@style/activity_repairmanageitem_tablerow" >

                    <TextView
                        style="@style/activity_repairmanageitem_textview_item"
                        android:text="@string/activity_repairmanageitem_otherstep" />

                    <TextView
                        android:id="@+id/activity_repairmanageitem_otherstep"
                        style="@style/activity_repairmanageitem_textview" />
                </TableRow>
            </TableLayout>

            <TableLayout style="@style/activity_repairmanageitem_tablelayout" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_group"
                    android:text="@string/activity_repairmanageitem_people" />

                <TextView style="@style/item_divide" />

                <TableRow
                    android:id="@+id/activity_repairmanageitem_taskpeople_tr"
                    style="@style/activity_repairmanageitem_tablerow" >

                    <TextView
                        style="@style/activity_repairmanageitem_textview_item"
                        android:text="@string/activity_repairmanageitem_taskpeople" />

                    <TextView
                        android:id="@+id/activity_repairmanageitem_taskpeople"
                        style="@style/activity_repairmanageitem_textview" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/activity_repairmanageitem_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_repairmanageitem_submit" />
            
        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@+id/activity_repairmanageitem_machinelist"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/white"
        android:choiceMode="singleChoice"
        android:listSelector="@drawable/inforitem_withnoconner_blue_bg" >
    </ListView>

</android.support.v4.widget.DrawerLayout>