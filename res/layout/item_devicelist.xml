<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_margin"
    android:background="@drawable/item_bg_withnocorner_blue" >
    
    <ImageView 
        android:id="@+id/item_devicelist_pic"
        android:layout_width="@dimen/ic_adapter_pic"
        android:layout_height="@dimen/ic_adapter_pic"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/item_devicelist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:layout_toRightOf="@id/item_devicelist_pic"
        android:layout_marginLeft="@dimen/layout_margin"
        android:textSize="@dimen/fontsize_large" />
    
    
    <TextView
        android:id="@+id/item_devicelist_cons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:layout_below="@id/item_devicelist_name"
       	android:layout_toRightOf="@id/item_devicelist_pic"
        android:layout_marginLeft="@dimen/layout_margin"
        android:textSize="@dimen/fontsize_normal"
        android:textColor="@color/lightgray" />
    


</RelativeLayout>
