<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/activity_deviceinfolist_conslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spn_style_dropdown"
        android:spinnerMode="dropdown"
        android:dropDownSelector="@color/lightblue" />

    <com.env.dcwater.fragment.PullToRefreshView
        android:id="@+id/activity_deviceinfolist_devicelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@drawable/item_bg_withnocorner_blue" >
    </com.env.dcwater.fragment.PullToRefreshView>

</LinearLayout>