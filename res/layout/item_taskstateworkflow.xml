<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_margin_long" >
    
    <ImageView 
        android:id="@+id/item_taskstateworkflow_img"
        android:layout_width="@dimen/circle"
        android:layout_height="@dimen/circle"
        android:layout_centerInParent="true"
        android:background="@drawable/stateflow_tv_bg_done"/>
        
        <TextView
            android:id="@+id/item_taskstateworkflow_left"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/item_taskstateworkflow_img"
            android:layout_centerVertical="true"
            android:background="@drawable/stateflow_tv_bg_done"
            android:layout_marginRight="@dimen/layout_margin_long"
            android:gravity="center_vertical|left"
            android:textColor="@color/white"
            android:textSize="@dimen/fontsize_normal"
            android:singleLine="false"
            android:padding="@dimen/layout_margin_short" />
        
        <TextView
            android:id="@+id/item_taskstateworkflow_right"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/item_taskstateworkflow_img"
            android:layout_centerVertical="true"
            android:background="@drawable/stateflow_tv_bg_done"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/layout_margin_long"
            android:textColor="@color/white"
            android:textSize="@dimen/fontsize_normal"
            android:singleLine="false"
            android:padding="@dimen/layout_margin_short" />
    

</RelativeLayout>
