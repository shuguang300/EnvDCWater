<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/item_upkeepreport_pic"
        android:layout_width="@dimen/ic_adapter_pic"
        android:layout_height="@dimen/ic_adapter_pic"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_pic_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_upkeepreport_pic"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_upkeepreport_name"
                style="@style/ItemLayout"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_item_device" />

            <TextView
                android:id="@+id/item_upkeepreport_state"
                style="@style/ItemLayout"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_item_state" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_upkeepreport_mtpos"
            style="@style/ItemLayout"
            android:drawableLeft="@drawable/ic_item_mtposition" />

        <!--
        <TextView
            android:id="@+id/item_upkeepreport_require"
            style="@style/ItemLayout"
            android:drawableLeft="@drawable/ic_item_require" />

        <TextView
            android:id="@+id/item_upkeepreport_needtime"
            style="@style/ItemLayout"
            android:drawableLeft="@drawable/ic_item_time" />
        -->

    </LinearLayout>

</RelativeLayout>