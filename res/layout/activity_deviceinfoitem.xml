<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    <RadioGroup 
        android:id="@+id/activity_deviceinfoitem_title"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/lightblack"
        android:gravity="center_vertical|center_horizontal">
        <RadioButton
            android:id="@+id/activity_deviceinfoitem_title_property"
            style="@style/ViewPagerRadioButtonStyle"
            android:checked="true">
        </RadioButton>
        <RadioButton 
            android:id="@+id/activity_deviceinfoitem_title_manage"
            style="@style/ViewPagerRadioButtonStyle">
        </RadioButton>
        <RadioButton 
            android:id="@+id/activity_deviceinfoitem_title_params"
            style="@style/ViewPagerRadioButtonStyle">
        </RadioButton>
        <RadioButton 
            android:id="@+id/activity_deviceinfoitem_title_statu"
            style="@style/ViewPagerRadioButtonStyle">
        </RadioButton>
        <RadioButton 
            android:id="@+id/activity_deviceinfoitem_title_file"
            style="@style/ViewPagerRadioButtonStyle">
        </RadioButton>
    </RadioGroup>
    
    <android.support.v4.view.ViewPager
        android:layout_above="@id/activity_deviceinfoitem_title"
        android:id="@+id/activity_deviceinfoitem"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <!-- <android.support.v4.view.PagerTabStrip
            android:id="@+id/activity_deviceinfoitem_tab"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:background="@color/red" /> -->
    </android.support.v4.view.ViewPager>

</RelativeLayout>