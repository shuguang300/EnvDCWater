<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RadioGroup
        android:id="@+id/activity_deviceinfoitem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/lightblack"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/activity_deviceinfoitem_title_property"
            style="@style/ViewPagerRadioButtonStyle"
            android:checked="true" >
        </RadioButton>

        <RadioButton
            android:id="@+id/activity_deviceinfoitem_title_manage"
            style="@style/ViewPagerRadioButtonStyle" >
        </RadioButton>

        <RadioButton
            android:id="@+id/activity_deviceinfoitem_title_params"
            style="@style/ViewPagerRadioButtonStyle" >
        </RadioButton>

        <RadioButton
            android:id="@+id/activity_deviceinfoitem_title_statu"
            style="@style/ViewPagerRadioButtonStyle" >
        </RadioButton>

        <RadioButton
            android:id="@+id/activity_deviceinfoitem_title_file"
            style="@style/ViewPagerRadioButtonStyle" >
        </RadioButton>
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_deviceinfoitem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_deviceinfoitem_title" >

    </android.support.v4.view.ViewPager>

</RelativeLayout>