<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_repair_ddopinion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TableLayout
            style="@style/ItemGroupStyle" >

            <TextView
                style="@style/ItemGroupTitleStyle"
                android:drawableLeft="@drawable/ic_item_groupedit"
                android:text="@string/activity_repairmanageitem_repair" />

            <TextView style="@style/ItemDivider" />

            <TableRow
                android:id="@+id/view_repair_ddopinion_money_tr"
                style="@style/ItemLineStyle" >

                <TextView
                    style="@style/ItemTitleStyle"
                    android:drawableLeft="@drawable/ic_item_money"
                    android:text="@string/activity_repairmanageitem_repairmoneycost" />

                <TextView
                    android:id="@+id/view_repair_ddopinion_money"
                    android:drawableRight="@drawable/ic_item_warning"
                    style="@style/ItemValueStyle" />
            </TableRow>

        </TableLayout>

        <TableLayout
            style="@style/ItemGroupStyle" >

            <TextView
                style="@style/ItemGroupTitleStyle"
                android:drawableLeft="@drawable/ic_item_groupedit"
                android:text="@string/activity_repairmanageitem_verify" />

            <TextView style="@style/ItemDivider" />

            <TableRow
                style="@style/ItemLineStyle" >

                <TextView
                    style="@style/ItemTitleStyle"
                    android:drawableLeft="@drawable/ic_item_approve"
                    android:text="@string/activity_repairmanageitem_ddverifyresult" />

                <Switch
                    android:id="@+id/view_repair_ddopinion_verifyresult"
                    style="@style/ItemValueStyle"
                    android:textOff="未通过"
                    android:textOn="通过" />
            </TableRow>

            <TextView style="@style/ItemDivider" />

            <TableRow
                style="@style/ItemLineStyle" >

                <TextView
                    style="@style/ItemTitleStyle"
                    android:drawableLeft="@drawable/ic_item_person"
                    android:text="@string/activity_repairmanageitem_verifypeople" />

                <TextView
                    android:id="@+id/view_repair_ddopinion_verifypeople"
                    android:enabled="false"
                    style="@style/ItemValueStyle" />
            </TableRow>

            <TextView style="@style/ItemDivider" />

            <TableRow
                android:id="@+id/view_repair_ddopinion_opinion_tr"
                style="@style/ItemLineStyle" >

                <TextView
                    style="@style/ItemTitleStyle"
                    android:drawableLeft="@drawable/ic_item_opinion"
                    android:text="@string/activity_repairmanageitem_equipmentopinion" />

                <TextView
                    android:id="@+id/view_repair_ddopinion_opinion"
                    android:drawableRight="@drawable/ic_item_warning"
                    style="@style/ItemValueStyle" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/view_repair_submit"
            style="@style/RedButtonStyle"
            android:layout_width="match_parent" />
    </LinearLayout>

</ScrollView>