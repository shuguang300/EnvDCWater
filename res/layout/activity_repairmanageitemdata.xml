<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_repairmanageitem_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/activity_repairmanageitem_repairgroupfault"
            style="@style/activity_repairmanageitem_tablelayout"
            android:visibility="gone" >

            <TextView
                style="@style/activity_repairmanageitem_textview_group"
                android:text="@string/activity_repairmanageitem_fault" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_name_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_name" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_name"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_faulttime_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_faulttime" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_faulttime"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_faultphenomenon_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_faultphenomenon" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_faultphenomenon"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_handlestep_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_handlestep" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_handlestep"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_otherstep_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_otherstep" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_otherstep"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_taskpeople_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_taskpeople" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_taskpeople"
                    style="@style/activity_repairmanageitem_textview"
                    android:enabled="false" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/activity_repairmanageitem_tasksendgroup"
            style="@style/activity_repairmanageitem_tablelayout"
            android:visibility="gone" >

            <TextView
                style="@style/activity_repairmanageitem_textview_group"
                android:text="@string/activity_repairmanageitem_repair" />

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_repairsttime_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_repairsttime" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_repairsttime"
                    style="@style/activity_repairmanageitem_textview"
                    android:enabled="false" />
            </TableRow>

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_repairpeople_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_repairsender" />

                <TextView
                    android:enabled="false"
                    android:id="@+id/activity_repairmanageitem_repairpeople"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_repairtimecost_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_repairtimecost" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_repairtimecost"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_repaircontent_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_repaircontent" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_repaircontent"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/activity_repairmanageitem_taskrepairgroup"
            style="@style/activity_repairmanageitem_tablelayout"
            android:visibility="gone" >

            <TextView
                style="@style/activity_repairmanageitem_textview_group"
                android:text="@string/activity_repairmanageitem_repair" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_repairresult_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_repairresult" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_repairresult"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_repairendtime_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_repairendtime" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_repairendtime"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_repairthingcost_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_repairthingcost" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_repairthingcost"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_repairmoneycost_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_repairmoneycost" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_repairmoneycost"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/activity_repairmanageitem_ddverifygroup"
            style="@style/activity_repairmanageitem_tablelayout"
            android:visibility="gone" >

            <TextView
                style="@style/activity_repairmanageitem_textview_group"
                android:text="@string/activity_repairmanageitem_verify" />

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_verifyresult_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_verifyresult" />

                <Switch
                    android:id="@+id/activity_repairmanageitem_verifyresult"
                    style="@style/activity_repairmanageitem_textview"
                    android:textOff="审核未通过"
                    android:textOn="审核通过" />
            </TableRow>

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_verifypeople_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_verifypeople" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_verifypeople"
                    style="@style/activity_repairmanageitem_textview"
                    android:enabled="false" />
            </TableRow>

            <TextView style="@style/item_divide" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_equipmentopinion_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_equipmentopinion" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_equipmentopinion"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/activity_repairmanageitem_pdverifygroup"
            style="@style/activity_repairmanageitem_tablelayout"
            android:visibility="gone" >

            <TextView
                style="@style/activity_repairmanageitem_textview_group"
                android:text="@string/activity_repairmanageitem_verify" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_productionopinion_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_productionopinion" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_productionopinion"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/activity_repairmanageitem_pmverifygroup"
            style="@style/activity_repairmanageitem_tablelayout"
            android:visibility="gone" >

            <TextView
                style="@style/activity_repairmanageitem_textview_group"
                android:text="@string/activity_repairmanageitem_verify" />

            <TableRow
                android:id="@+id/activity_repairmanageitem_plantopinion_tr"
                style="@style/activity_repairmanageitem_tablerow" >

                <TextView
                    style="@style/activity_repairmanageitem_textview_item"
                    android:text="@string/activity_repairmanageitem_plantopinion" />

                <TextView
                    android:id="@+id/activity_repairmanageitem_plantopinion"
                    style="@style/activity_repairmanageitem_textview" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/activity_repairmanageitem_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_repairmanageitem_submit" />
        
    </LinearLayout>

</ScrollView>