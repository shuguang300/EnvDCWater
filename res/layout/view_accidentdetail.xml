<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >
    <TextView
        android:id="@+id/view_accidentdetail_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_pic_default"/>
	<LinearLayout 
	    android:layout_height="72dp"
	    android:layout_width="match_parent"
	    android:orientation="vertical"
	    android:layout_toRightOf="@id/view_accidentdetail_img">
	    <EditText 
	        android:id="@+id/view_accidentdetail_content"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:inputType="textMultiLine"
	        android:singleLine="false" />
	    <LinearLayout
	        android:id="@+id/view_accidentdetail_voice" 
	        android:layout_height="24dp"
	    	android:layout_width="match_parent"
	    	android:gravity="center_vertical|left"
	    	android:orientation="horizontal">
	    </LinearLayout>
	</LinearLayout>
</RelativeLayout>
