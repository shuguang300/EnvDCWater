<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="fragmentcontroll_item">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:textColor">@color/white</item>
	    <item name="android:button">@null</item>
	    <item name="android:gravity">center_horizontal</item>
	    <item name="android:textSize">@dimen/xx_small</item>
	</style>
	
	<style name="activity_titlebar">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">@dimen/xx_large</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:background">@color/lightblack</item>
	</style>
	<style name="fragmentitem_titlepart">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_alignParentLeft">true</item>
	    <item name="android:layout_centerVertical">true</item>
	    <item name="android:textSize">@dimen/large</item>
	</style>
	<style name="fragmentitem_valuepart">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_alignParentRight">true</item>
	    <item name="android:layout_centerVertical">true</item>
	    <item name="android:textSize">@dimen/large</item>
	</style>
	<!---->
	<style name="inforitem_withallconner">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">10dp</item>
	    <item name="android:layout_marginTop">5dp</item>
	    <item name="android:clickable">true</item>
	    <item name="android:background">@drawable/inforitem_withallconner_blue_bg</item>
	</style>
	<!-- 切换fragment的radio的样式 -->
	<style name="fragment_button">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
	</style>
	<!-- 主界面 用户权限的模块的样式 -->
	<style name="activity_userright_group">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:layout_margin">5dp</item>
	    <item name="android:padding">5dp</item>
	    <item name="android:background">@drawable/inforitem_withallconner_blue_bg</item>
	</style>
	
	<!-- 设备维修单个记录查看界面中的 每一横列的样式-->
	<style name="activity_repairmanageitem_tablerow">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:clickable">true</item>
	    <item name="android:focusable">true</item>
	    <item name="android:focusableInTouchMode">true</item>
	    <item name="android:background">@drawable/inforitem_withnoconner_blue_bg</item>
	</style>
	
	<!-- 分隔符 样式-->
	<style name="item_divide">
   	    <item name="android:background">@color/gray</item>
   	    <item name="android:layout_height">1dp</item>
   	    <item name="android:layout_width">match_parent</item>
   	</style>
   	
	<!-- 设备维修单个记录查看界面中的 表头信息 -->
	<style name="activity_repairmanageitem_textview_item">
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:gravity">center_vertical</item>
	</style>
	
	<!-- 设备维修单个记录查看界面中的 三个大表单的描述信息 -->
	<style name="activity_repairmanageitem_textview_group">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">5dp</item>
	    <item name="android:background">@color/gray</item>
	</style>
	
	<!-- 设备维修单个记录查看界面中的 3个大表单的样式 -->
	<style name="activity_repairmanageitem_tablelayout">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_margin">5dp</item>
	    <item name="android:background">@color/gray</item>
	    <item name="android:padding">1dp</item>
	    <item name="android:orientation">vertical</item>
	</style>
	
	<!-- 设备维修单个记录查看界面中的 编辑菜单样式 -->
	<style name="activity_repairmanageitem_textview">
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:drawableRight">@drawable/activity_machinemanage_arrowright</item>
	    <item name="android:singleLine">false</item>
	    <item name="android:gravity">center_vertical|right</item>
	</style>
	
	
	
	
	<!-- 自定义的actionbar的样式 -->
	<style name="CustomActionBarTheme"  parent="@android:style/Theme.Holo.Light">  
        <item name="android:actionBarStyle">@style/MyActionBar</item>  
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>  
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionBarDivider">@drawable/actionbar_item_divider</item>  
        <!-- ActionBar 的小箭头 -->  
     <!--    <item name="android:homeAsUpIndicator">@drawable/activity_machinemanage_arrowleft</item> -->
    </style>  
    <!-- ActionBar styles -->  
    <style name="MyActionBar"  parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/lightblack</item>  
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
       
    </style>  
    <!-- ActionBar title text -->  
    <style name="MyActionBarTitleText"  parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">  
        <item name="android:textColor">@color/white</item>  
    </style>  
  
    <!-- ActionBar tabs text styles -->  
    <style name="MyActionBarTabText"   parent="@android:style/Widget.Holo.ActionBar.TabText">  
        <item name="android:textColor">@color/white</item>  
    </style>  
	
</resources>
