<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="fragmentcontroll_item">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:textColor">@color/white</item>
	    <item name="android:button">@null</item>
	    <item name="android:gravity">center_horizontal</item>
	    <item name="android:textSize">@dimen/xx_small</item>
	</style>
	
	<style name="activity_titlebar">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">@dimen/xx_large</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:background">@color/lightblack</item>
	</style>
	<style name="fragmentitem_titlepart">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_alignParentLeft">true</item>
	    <item name="android:layout_centerVertical">true</item>
	    <item name="android:textSize">@dimen/large</item>
	</style>
	<style name="fragmentitem_valuepart">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_alignParentRight">true</item>
	    <item name="android:layout_centerVertical">true</item>
	    <item name="android:textSize">@dimen/large</item>
	</style>
	<style name="inforitem_withallconner">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">10dp</item>
	    <item name="android:layout_marginTop">5dp</item>
	    <item name="android:clickable">true</item>
	    <item name="android:background">@drawable/inforitem_withallconner_blue_bg</item>
	</style>
	<style name="fragment_button">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
	</style>
	<style name="activity_userright_group">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:layout_margin">5dp</item>
	    <item name="android:padding">5dp</item>
	    <item name="android:background">@drawable/inforitem_withallconner_blue_bg</item>
	</style>
	<style name="CustomActionBarTheme"  parent="@android:style/Theme.Holo.Light">  
        <item name="android:actionBarStyle">@style/MyActionBar</item>  
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>  
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionBarDivider">@drawable/actionbar_item_divider</item>  
        <!-- ActionBar 的小箭头 -->  
     <!--    <item name="android:homeAsUpIndicator">@drawable/activity_machinemanage_arrowleft</item> -->
    </style>  
  
    <!-- ActionBar styles -->  
    <style name="MyActionBar"  parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/lightblack</item>  
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
       
    </style>  
    
    
    <!-- ActionBar title text -->  
    <style name="MyActionBarTitleText"  parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">  
        <item name="android:textColor">@color/white</item>  
    </style>  
  
    <!-- ActionBar tabs text styles -->  
    <style name="MyActionBarTabText"   parent="@android:style/Widget.Holo.ActionBar.TabText">  
        <item name="android:textColor">@color/white</item>  
    </style>  
	
</resources>
