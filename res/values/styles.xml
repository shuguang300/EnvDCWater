<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
	<!-- popupwindow 特效 -->
	<style name="Popupwindow_anim" parent="android:Animation">
       	<item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    
	
	<!---->
	<style name="ItemBlueBgWithAllConner">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">10dp</item>
	    <item name="android:layout_marginTop">5dp</item>
	    <item name="android:clickable">true</item>
	    <item name="android:background">@drawable/item_bg_withallcorner_blue</item>
	</style>
	
	<!-- 设备维修单个记录查看界面中的 每一横列的样式-->
	<style name="ItemLineStyle">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:clickable">true</item>
	    <item name="android:background">@drawable/item_bg_withnocorner_blue</item>
	</style>
	
	<!--  -->
	<style name="DialogActivityStyle" parent="@android:style/Theme.Dialog">
   	    <item name="android:windowFrame">@null</item><!-- 边框 -->  
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->  
        <item name="android:windowIsTranslucent">false</item> 半透明 -->  
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->  
        <item name="android:backgroundDimEnabled">false</item><!-- 模糊 --> 
    </style>
    
	<!--  -->
   	<style name="CustomDialogStyle" parent="@android:style/Theme.Holo.Light.Dialog">
   	    <item name="android:windowFrame">@null</item><!-- 边框 -->  
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->  
        <item name="android:windowIsTranslucent">false</item> 半透明 -->  
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->  
        <item name="android:backgroundDimEnabled">false</item><!-- 模糊 --> 
        <item name="android:windowBackground">@color/white</item><!-- 模糊 --> 
    </style>
	
	<!-- 筛选控件的 条件样式 -->
	<style name="ViewDatafilterTablerow">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">15dp</item>
	    <item name="android:clickable">true</item>
	    <item name="android:background">@drawable/item_bg_withnocorner_blue</item>
	</style>
	
	<!-- 切换fragment的radio的样式 -->
	<style name="WebviewController">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:background">@drawable/btn_style_green</item>
	</style>
	
	<!-- 分隔符 样式-->
	<style name="ItemDivider">
   	    <item name="android:background">@color/gray</item>
   	    <item name="android:layout_height">1dp</item>
   	    <item name="android:layout_width">match_parent</item>
   	</style>
   	
	<!-- 设备维修单个记录查看界面中的 表头信息 -->
	<style name="ItemTitleStyle">
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:gravity">center_vertical|left</item>
	    <item name="android:layout_gravity">center_vertical</item>
	    <item name="android:padding">5dp</item>
	    <item name="android:textSize">@dimen/middle</item>
	</style>
	
	<!-- 设备维修单个记录查看界面中的 编辑菜单样式 -->
	<style name="ItemValueStyle">
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:singleLine">false</item>
	    <item name="android:textSize">@dimen/middle</item>
	    <item name="android:paddingRight">5dp</item>
	    <item name="android:layout_gravity">center_vertical</item>
	    <item name="android:gravity">center_vertical|right</item>
	</style>
	
	<!-- 设备维修单个记录查看界面中的 三个大表单的描述信息 -->
	<style name="ItemGroupTitleStyle">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">5dp</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:layout_gravity">center_vertical</item>
	    <item name="android:background">@color/gray</item>
	    <item name="android:textSize">@dimen/large</item>
	</style>
	
	<!-- 设备维修单个记录查看界面中的 3个大表单的样式 -->
	<style name="ItemGroupStyle">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_margin">5dp</item>
	    <item name="android:background">@color/gray</item>
	    <item name="android:padding">1dp</item>
	    <item name="android:orientation">vertical</item>
	</style>
	
	<style name="ItemLayout">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:gravity">left|center_vertical</item>
	    <item name="android:layout_marginLeft">10dp</item>
	    <item name="android:padding">2dp</item>
	    <item name="android:textSize">@dimen/middle</item>
	</style>
	
	<style name="SubmitButtonStyle" parent="@android:style/Widget.Button">
	    <item name="android:background">@drawable/btn_style_red</item>
	    <item name="android:textColor">@color/white</item>
	</style>
	
	<style name="MediaFileViewButtonStyle" parent="@android:style/Widget.Button">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_margin">5dp</item>
	    <item name="android:background">@drawable/btn_style_green</item>
	</style>
	
	
	<!-- 自定义的actionbar的样式 -->
	<style name="CustomActionBarTheme"  parent="@android:style/Theme.Holo.Light">  
        <item name="android:actionBarStyle">@style/MyActionBar</item>  
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>  
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionBarDivider">@drawable/actionbar_item_divider</item>  
        <item name="android:actionOverflowButtonStyle">@style/CustomOverFlowButtonStyle</item>
        <!-- ActionBar 的小箭头 -->  
     <!--    <item name="android:homeAsUpIndicator">@drawable/activity_machinemanage_arrowleft</item> -->
    </style>  
    
	<style name="CustomOverFlowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
	    <item name="android:src">@drawable/ic_menu_more</item>
	</style>
	
    <!-- ActionBar styles -->  
    <style name="MyActionBar"  parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/lightblack</item>  
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
       
    </style>  
    <!-- ActionBar title text -->  
    <style name="MyActionBarTitleText"  parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">  
        <item name="android:textColor">@color/white</item>  
    </style>  
  
    <!-- ActionBar tabs text styles -->  
    <style name="MyActionBarTabText"   parent="@android:style/Widget.Holo.ActionBar.TabText">  
        <item name="android:textColor">@color/white</item>  
    </style>  
	
</resources>
