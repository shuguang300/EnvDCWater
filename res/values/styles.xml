<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="fragmentcontroll_item">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:textColor">@color/white</item>
	    <item name="android:button">@null</item>
	    <item name="android:gravity">center_horizontal</item>
	    <item name="android:textSize">@dimen/xx_small</item>
	</style>
	
	<style name="activity_titlebar">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">@dimen/xx_large</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:background">@color/blue</item>
	</style>
	<style name="fragmentitem_titlepart">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_alignParentLeft">true</item>
	    <item name="android:layout_centerVertical">true</item>
	    <item name="android:textSize">@dimen/large</item>
	</style>
	<style name="fragmentitem_valuepart">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_alignParentRight">true</item>
	    <item name="android:layout_centerVertical">true</item>
	    <item name="android:textSize">@dimen/large</item>
	</style>
	<style name="inforitem_withallconner">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">10dp</item>
	    <item name="android:layout_marginTop">5dp</item>
	    <item name="android:clickable">true</item>
	    <item name="android:background">@drawable/inforitem_withallconner_bg</item>
	</style>
	<style name="fragment_button">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
	</style>
</resources>
